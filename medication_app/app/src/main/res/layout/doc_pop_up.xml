<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/doc_pop_up_title"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_centerHorizontal="true"
                android:text="Add a Doctor Info"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="italic">

            </TextView>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_pop_up_title"
                android:hint="Doctor First Name : "
                android:inputType="textAutoComplete"></EditText>


            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_name"
                android:hint="Doctor Last Name : "
                android:inputType="textAutoComplete"></EditText>

            <EditText
                android:id="@+id/doc_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name"
                android:hint="Email : "
                android:inputType="textAutoComplete"></EditText>

            <EditText
                android:id="@+id/doc_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_email"
                android:hint="Phone : "
                android:inputType="phone">

            </EditText>


            <Button
                android:id="@+id/doc_save_button"
                android:backgroundTint="#FF0000"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Add Doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_phone_number"
                >

            </Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>