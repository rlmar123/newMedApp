<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_centerHorizontal="true"
                android:text="Add a Medication"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="italic">

            </TextView>

            <EditText
                android:id="@+id/medication_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:hint="Medication Name : "
                android:inputType="textAutoComplete">

            </EditText>

            <EditText
                android:id="@+id/medication_nomenclature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/medication_name"
                android:hint="Medication Npmenclature : "
                android:inputType="textAutoComplete">

            </EditText>

            <EditText
                android:id="@+id/amount_per_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/medication_nomenclature"
                android:hint="Amount of Pills at a time : "
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/times_per_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_per_dose"
                android:hint="Number of times per day : "
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/amount_of_pills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/times_per_day"
                android:hint="Amount of Pills : "
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/number_of_refills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_of_pills"
                android:hint="Amount of Refills : "
                android:inputType="number">

            </EditText>

            <Button
                android:id="@+id/med_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_of_refills"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#FF0000"
                android:text="Add Medicine"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>