<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/bannerView"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_gravity="center"
             android:layout_margin="25dp"
             android:background="@drawable/border"
             android:transitionName="example_transition"
             app:lottie_autoPlay="true"
             app:lottie_loop="true"
             app:lottie_rawRes="@raw/pharmacy" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="50dp"

             android:text="MED DASHBOARD"
             android:textAlignment="center"
             android:textSize="24sp" />

         <!--FIRST ROW-->

         <!--end first-->


         <!--second ROW-->

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="75dp"
             android:orientation="horizontal"
             android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">

               <com.airbnb.lottie.LottieAnimationView
                   android:id="@+id/HomeView"
                   android:layout_width="70dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   app:lottie_autoPlay="true"
                   app:lottie_loop="true"
                   app:lottie_rawRes="@raw/home" />

               <TextView
                   android:id="@+id/home_text"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/purple_500"
                   android:padding="8dp"
                   android:text="Home"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">


               <com.airbnb.lottie.LottieAnimationView
                   android:id="@+id/DoctorView"
                   android:layout_width="70dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   app:lottie_autoPlay="true"
                   app:lottie_loop="true"
                   app:lottie_rawRes="@raw/stethoscope" />

               <TextView
                   android:id="@+id/doct_text"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/purple_500"
                   android:padding="8dp"
                   android:text="Doctor"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="18sp" />

            </LinearLayout>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:orientation="horizontal"
             android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/border"
                android:orientation="vertical">

               <com.airbnb.lottie.LottieAnimationView
                   android:id="@+id/AppointView"
                   android:layout_width="70dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"

                   app:lottie_autoPlay="true"
                   app:lottie_loop="true"
                   app:lottie_rawRes="@raw/appointment" />

               <TextView
                   android:id="@+id/appt_text"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/purple_500"
                   android:padding="8dp"
                   android:text="Appointment"
                   android:transitionName="example_transition"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="vertical">


               <com.airbnb.lottie.LottieAnimationView
                   android:id="@+id/AboutUs"
                   android:layout_width="70dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   app:lottie_autoPlay="true"
                   app:lottie_loop="true"
                   app:lottie_rawRes="@raw/about" />

               <TextView
                   android:id="@+id/about_text"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/purple_500"
                   android:padding="8dp"
                   android:text="About Us"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="18sp" />

            </LinearLayout>

         </LinearLayout>

      </LinearLayout>

   </ScrollView>



</LinearLayout>